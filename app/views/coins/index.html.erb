<p style="color: green"><%= notice %></p>

<% content_for :title, "Coins" %>

<h1><%= t('coins') %></h1>

<table>

  <thead>
    <tr>
      <th style="padding-right: 30px;"><%= t('name') %></th>
      <th style = "padding-right: 30px;"> <%= t('symbol') %> </th>
      <th > <%= t('image') %></th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td "><%= coin.acronym %></td>
        <td ><%= image_tag coin.url_image, size: "30x30" %></td>
        <td>
          <%= link_to t('crud.show'), coin_path(coin) %>
          <%= link_to t('crud.edit'), edit_coin_path(coin) %>
          <%= link_to t('crud.delete'), coin_path(coin), method: :delete, data: { confirm: t('crud.confirm_delete') } %>
      </tr>
    <% end %>
  </tbody>

</table>

<div class = "field">
<p> <%= link_to t('new.coin'), new_coin_path %> </p>
</div>

